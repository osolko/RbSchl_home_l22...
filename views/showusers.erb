<h2>Клиенти</h2>
<p>Все записание клиенти</p>

<table class="table table-striped">   
  <thead>
    <tr>
      <th> User </th>
      <th> Phone</th>
      <th> Date</th>
      <th> Barber</th>
      <th> Color</th>
    </tr>    
  </thead>
  
  <tbody>
    <% @results.each do |row| %>
      <tr>
        <td> <%= row['username']  %> </td>
        <td> <%= row['phone']  %> </td>
        <td> <%= row['datestamp']  %> </td>
        <td> <%= row['barber']  %> </td>
        <td style="background-color: <%= row['color']  %>"> <%= row['color']  %> </td>
      </tr>
    <% end %>
  </tbody>

</table>