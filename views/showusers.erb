<h2>Клиенти</h2>
<p>Все записание клиенти</p>

<table class="table">
  <% @results.each do |row| %>
    <tr>
      <td> <%= row['username']  %> </td>
      <td> <%= row['phone']  %> </td>
      <td> <%= row['datestamp']  %> </td>
      <td> <%= row['barber']  %> </td>
      <td> <%= row['color']  %> </td>
    </tr>

  <% end %>
</table>